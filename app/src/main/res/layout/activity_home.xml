<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/homeToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:backgroundTint="@color/colorPrimaryDark"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/toolBarHeading"
                    android:layout_marginLeft="5dp"
                    android:text="@string/home"
                    android:textColor="@color/whiteBackgroundColor" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--<ImageView-->
                <!--android:id="@+id/cartBtn"-->
                <!--style="@style/cartStyle"/>-->

                <!--<ImageView-->
                <!--android:id="@+id/wishListBtn"-->
                <!--style="@style/wishListStyle"/>-->

                <RelativeLayout
                    style="@style/cartStyle"
                    android:onClick="cart">

                    <ImageButton
                        android:id="@+id/cartBtn"
                        style="@style/cart_wishList_style"
                        android:background="@drawable/cart_one"
                        android:onClick="cart" />

                    <TextView
                        android:id="@+id/count_cart"
                        style="@style/badge_design"
                        android:onClick="cart"
                        tools:layout_editor_absoluteX="32dp"
                        tools:layout_editor_absoluteY="7dp" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/wishListStyle"
                    android:onClick="wishList">

                    <ImageButton
                        android:id="@+id/wishListBtn"
                        style="@style/cart_wishList_style"
                        android:background="@drawable/wishlist_one"
                        android:onClick="wishList" />

                    <TextView
                        android:id="@+id/count_wishList"
                        style="@style/badge_design"
                        android:onClick="wishList"
                        tools:layout_editor_absoluteX="32dp"
                        tools:layout_editor_absoluteY="7dp" />
                </RelativeLayout>

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/versionInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorAccent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:fontFamily="@font/avenir"
                android:gravity="center"
                android:text="Please update the application for better experience."
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/versionBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="0.2"
                android:background="@drawable/version_btn_background"
                android:fontFamily="@font/avenir"
                android:text="Update"
                android:textAllCaps="false"
                android:textColor="@color/whiteBackgroundColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/home_searchView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/search_view_background"
                app:queryHint="Enter Product Name">

            </androidx.appcompat.widget.SearchView>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whiteBackgroundColor">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteBackgroundColor"
                android:orientation="vertical"
                tools:context=".Activity.HomeActivity">


                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/homeViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/whiteBackgroundColor" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/sliderDots"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    app:tabBackground="@drawable/tab_selector"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp"
                    app:tabPaddingEnd="8dp"
                    app:tabPaddingStart="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/textColor" />

                <ImageView
                    android:id="@+id/connectionCheckImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/network_state"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/whiteBackgroundColor"
                    android:orientation="vertical">

                    <!--<TextView-->
