<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/address_background"
    android:layout_marginBottom="5dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.75"
            android:background="@color/whiteBackgroundColor"
            android:weightSum="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/image_not_available"
                android:layout_weight="0.30"
                android:scaleType="fitXY"
                android:orientation="vertical"
                android:id="@+id/wishListImage">

            </ImageView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_weight="0.70">

                <TextView
                    app:fontFamily="@font/avenir"
                    android:id="@+id/productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/productPrice"
                    app:fontFamily="@font/avenir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="end">

                    <Button
                        app:fontFamily="@font/avenir"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:text="Remove"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:background="@drawable/button_red"
                        android:textColor="#fff"
                        android:id="@+id/removeWishListItem"/>

                    <!--<Button-->
                        <!--app:fontFamily="@font/avenir"-->
                        <!--android:layout_width="60dp"-->
                        <!--android:layout_height="25dp"-->
                        <!--android:background="@drawable/product_list_btn"-->
                        <!--android:text="ADD"-->
                        <!--android:textSize="12sp"-->
                        <!--android:textStyle="bold"-->
                        <!--android:textColor="#fff"-->
                        <!--android:id="@+id/addToCart"/>-->

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>