<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteBackgroundColor"
    android:orientation="vertical"
    tools:context=".Activity.ContactUsActivity">

    <androidx.appcompat.widget.Toolbar
        style="@style/toolBar"
        android:id="@+id/profileToolbar"
        android:background="@color/colorPrimaryDark">

        <ImageButton
            style="@style/backStyle"
            android:id="@+id/backBtn"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/toolBarHeading"
                android:text="@string/contactUs"
                android:textColor="@color/whiteBackgroundColor"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--<ImageView-->
            <!--style="@style/cartStyle"-->
            <!--android:id="@+id/cartBtn"/>-->
            <!--<ImageView-->
            <!--android:id="@+id/wishListBtn"-->
            <!--style="@style/wishListStyle" />-->

            <RelativeLayout
                android:onClick="cart"
                style="@style/cartStyle">
                <ImageButton
                    android:onClick="cart"
                    android:id="@+id/cartBtn"
                    style="@style/cart_wishList_style"
                    android:background="@drawable/cart_one"/>

                <TextView
                    android:onClick="cart"
                    android:id="@+id/count_cart"
                    style="@style/badge_design"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="7dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:onClick="wishList"
                style="@style/wishListStyle">
                <ImageButton
                    android:onClick="wishList"
                    android:id="@+id/wishListBtn"
                    style="@style/cart_wishList_style"
                    android:background="@drawable/wishlist_one"/>

                <TextView
                    android:onClick="wishList"
                    android:id="@+id/count_wishList"
                    style="@style/badge_design"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="7dp"/>
            </RelativeLayout>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/address_background"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow
                android:layout_marginBottom="5dp"
                android:weightSum="1">
                <TextView
                    style="@style/cartRowStartTextView"
                    android:text="@string/profileEmail">
                </TextView>
                <TextView
                    android:id="@+id/customerEmail"
                    style="@style/cartRowEndTextView"
                    android:gravity="start"
                    android:layout_marginLeft="40dp">
                </TextView>
            </TableRow>

            <View
                style="@style/viewStyle">
            </View>

            <TableRow
                android:layout_marginBottom="5dp"
                android:weightSum="1">
                <TextView
                    style="@style/cartRowStartTextView"
                    android:text="@string/mobileNo">
                </TextView>
                <TextView
                    android:id="@+id/customerMobileNo"
                    style="@style/cartRowEndTextView"
                    android:gravity="start"
                    android:layout_marginLeft="40dp">
                </TextView>
            </TableRow>


        </TableLayout>
    </LinearLayout>

</LinearLayout>