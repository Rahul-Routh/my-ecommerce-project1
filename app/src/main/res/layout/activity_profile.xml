    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profileToolbar"
        style="@style/toolBar"
        android:background="@color/colorPrimaryDark">

        <ImageButton
            android:id="@+id/backBtn"
            style="@style/backStyle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/toolBarHeading"
                android:text="@string/profile"
                android:textColor="@color/whiteBackgroundColor" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--<ImageView-->
            <!--style="@style/cartStyle"-->
            <!--android:id="@+id/cartBtn"/>-->
            <!--<ImageView-->
            <!--android:id="@+id/wishListBtn"-->
            <!--style="@style/wishListStyle" />-->

            <RelativeLayout
                style="@style/cartStyle"
                android:onClick="cart">

                <ImageButton
                    android:id="@+id/cartBtn"
                    style="@style/cart_wishList_style"
                    android:background="@drawable/cart_one"
                    android:onClick="cart" />

                <TextView
                    android:id="@+id/count_cart"
                    style="@style/badge_design"
                    android:onClick="cart"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="7dp" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/wishListStyle"
                android:onClick="wishList">

                <ImageButton
                    android:id="@+id/wishListBtn"
                    style="@style/cart_wishList_style"
                    android:background="@drawable/wishlist_one"
                    android:onClick="wishList" />

                <TextView
                    android:id="@+id/count_wishList"
                    style="@style/badge_design"
                    android:onClick="wishList"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="7dp" />

            </RelativeLayout>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:padding="10dp" >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="83dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/logo" />
    </LinearLayout>

